<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<RootNamespace>SysWeaver.MicroService</RootNamespace>
		<NoWarn>1701;1702;1591</NoWarn>
	</PropertyGroup>

	<ItemGroup>
	  <ProjectReference Include="..\SysWeaver.Auth.Core\SysWeaver.Auth.Core.csproj" />
	  <ProjectReference Include="..\SysWeaver.HttpServer\SysWeaver.HttpServer.csproj" />
	  <ProjectReference Include="..\SysWeaver.IsoData\SysWeaver.IsoData.csproj" />
	  <ProjectReference Include="..\SysWeaver.MicroServices.ServiceManager\SysWeaver.MicroServices.ServiceManager.csproj" />
	</ItemGroup>

	<ItemGroup>
	  <Folder Include="web\" />
	</ItemGroup>

	<Target Name="EmbedLocal" BeforeTargets="BeforeBuild">
		<Exec Command="rmdir /S /Q .\srcWeb\auth\icons\.opt" />
		<Exec Command="..\_tools\svg_opt\SvgOpt.exe -Compare .\WebCompare -RemoveSize .\srcWeb\auth\icons\*.svg .\srcWeb\auth\icons\.opt\" />
		<Exec Command="..\_tools\compress\Compress.exe -Methods br .\srcWeb\auth\icons\.opt\* .\web\auth\icons" />
		<Exec Command="..\_tools\compress\Compress.exe -Methods br .\srcWeb\auth\* .\web\auth" />
		<ItemGroup>
			<EmbeddedResource Include="web\**\*.br" Visible="false" />
		</ItemGroup>
	</Target>
	
	
</Project>
