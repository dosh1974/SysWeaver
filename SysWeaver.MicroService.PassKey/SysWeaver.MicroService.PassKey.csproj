<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net8.0</TargetFramework>
		<RootNamespace>SysWeaver.MicroService</RootNamespace>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<NoWarn>1701;1702;1591</NoWarn>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\SysWeaver.MicroService.Auth\SysWeaver.MicroService.Auth.csproj" />
		<ProjectReference Include="..\SysWeaver.MicroService.UserManager\SysWeaver.MicroService.UserManager.csproj" />
		<ProjectReference Include="..\_external\fido2-net-lib\Src\Fido2\Fido2.csproj" />
	</ItemGroup>


	<Target Name="EmbedLocal" BeforeTargets="BeforeBuild">
		<Exec Command="rmdir /S /Q .\srcWeb\icons\.opt" />
		<Exec Command="..\_tools\svg_opt\SvgOpt.exe -Compare .\WebCompare -RemoveFill -RemoveSize .\srcWeb\icons\*.svg .\srcWeb\icons\.opt\" />
		<Exec Command="..\_tools\compress\Compress.exe -Methods br .\srcWeb\icons\.opt\* .\web\icons" />
		<Exec Command="rmdir /S /Q .\srcData\.opt" />

		<Exec Command="..\_tools\compress\Compress.exe -Methods br .\srcWeb\auth\*+ .\web\auth" />
		<ItemGroup>
			<EmbeddedResource Include="web\**\*.br" Visible="false" />
		</ItemGroup>
	</Target>

</Project>
